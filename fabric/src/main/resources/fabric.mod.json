{
    "schemaVersion": 1,
    "id": "fnc",
    "version": "${version}",
    "name": "${mod_name}",
    "description": "${description}",
    "authors": [
        "${mod_author}"
    ],
    "contact": {
        "homepage": "${mod_url}",
        "issues": "https://github.com/YaBoiChips/FeaturesAndCreatures/issues",
        "sources": "https://github.com/YaBoiChips/FeaturesAndCreatures"
    },
    "license": "CC-2.0",
    "icon": "assets/fnc/icon.png",
    "environment": "*",
    "entrypoints": {
        "main": [
            "com.opalsmile.fnc.FnCFabric"
        ],
        "client": [
            "com.opalsmile.fnc.FnCFabricClient"
        ]
    },
    "mixins": [
        "fnc.mixins.json",
        "fnc.fabric.mixins.json"
    ],
    "depends": {
        "fabricloader": ">=0.14",
        "fabric": "*",
        "minecraft": ">=${minecraft_version}",
        "java": ">=17",
        "geckolib" : ">=${geckolib_version}"
    },
    "suggests": {
        "another-mod": "*"
    }
}
  